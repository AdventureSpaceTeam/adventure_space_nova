<controls1:FancyWindow xmlns="https://spacestation14.io"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:controls1="clr-namespace:Content.Client.UserInterface.Controls;assembly=Content.Client"
                       xmlns:ui="clr-namespace:Content.Client.SurveillanceCamera.UI;assembly=Content.Client"
                       MinWidth="450" MinHeight="350" Title="Камеры доступные ИИ">

    <BoxContainer Name="Box" Orientation="Vertical" Margin="5">
        <BoxContainer Orientation="Horizontal" Margin="0 5 0 5">
            <Button Name="Refresh" Text="Обновить" Margin="2 0 0 0" />
            <Button Name="BackToBody" Text="Вернуться" Margin="2 0 0 0" />
        </BoxContainer>

        <ui:SurveillanceCameraNavMapControl Name="NavMap" HorizontalExpand="True" VerticalExpand="True"
                                            MinSize="600 700" VerticalAlignment="Top" />

    </BoxContainer>
</controls1:FancyWindow>
